<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.mobidev.android.globalads"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="GlobalAdsApp">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/activity_login_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/activity_signup_title" >
        </activity>
        <activity
            android:name=".activities.ActionsListActivity"
            android:label="@string/activity_actions_list_title" >
        </activity>
    </application>

</manifest>